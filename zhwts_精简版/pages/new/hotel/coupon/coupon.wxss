page{
  background: #EDEDED;
}
.couponbox{
  height: auto;
  /* width: 100%; */
  padding: 30rpx;
  background: #EDEDED;
}
.couponlist{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  /* width: 90% */
}
.couponlist text{
  color: #333;
  font-size: 28rpx;
  width: 70%;
  float: left;
}
.listicon{
  width: 20%;
  float:right;
  text-align:center;
  font-size: 28rpx;
}
.nocoupon{
  width: 100%;
  color: #ccc;
  font-size: 28rpx;
}


.coupon{
  width: 100%;
  height: 246rpx;
  position: relative;
  border-radius:10rpx; 
  margin:20rpx auto;

}
.couponbig{
  margin-bottom: 20rpx;
}
.coupon_text{
  float: left;
  width: 450rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.coupon_text view{
  text-align: left;
}
.coupon_button{
  float: left;
  width: 190rpx;
  margin-left:20rpx; 
  border-left: 1px dashed #EDEDED;
  height: 246rpx;
}
.coupon_button .button{
  width: 120rpx;
  height: 40rpx;
  border: none;
  background: #FFC632;
  color: #D50F00;
  font-size: 24rpx;
  border-radius: 3px;
  padding: 5rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 40rpx;
}
.showshow{
  display: block;
}
.showhide{
  display: none;
}
.graycolor{
  color: #c2c2c2
}
.bluecolor{
  color: #0A64F1;
}