.tuicon{
  width:88%;
  border-radius:10rpx;
  background:#fff;
  margin:0 auto;
  margin-top:34rpx;
  padding:24rpx;
}

.tuicontit{
  height:60rpx;
  font-size:24rpx;
  line-height:60rpx;
  margin:0 auto;
}
.tuicontit view{
  float: left;
  text-align: center
}
.tuicontit view radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 20rpx; 
   height: 20rpx; 
   text-align: center;
   font-size:0rpx; /* 对勾大小 去掉 */
   background-color: #ccc; 
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
